@model BulkyWeb.Models.Models.Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="text-white">Edit <i class="bi bi-pen-fill"></i></h1>
            </div>
        </div>
    </div>
    <div class="card-body">
        <form method="post" class="row">
            <input asp-for="ID" type="hidden" />
            <div class="border p-3 mt-4">
                <div class="row pd-4">
                </div>
                <div asp-validation-summary="All">
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Name" class="form-control shadow border-0" />
                        <label asp-for="Name" class="p-0"></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="CategoryOrder" class="form-control shadow border-8" />
                        <label asp-for="CategoryOrder" class="p-0"></label>
                        <span asp-validation-for="CategoryOrder" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-6">
                            <button type="submit" class="btn btn-primary form-control"><i class="bi bi-check2-circle"></i> Save</button>
                        </div>
                        <div class="col-6">
                            <a asp-controller="Category" asp-action="GoBack" class="btn btn-secondary btn-outline-dark form-control">Go Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }